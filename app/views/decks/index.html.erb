<p id="notice"><%= notice %></p>

<h1>All Decks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Creation Date</th>
      <th>Last Modified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.title %></td>
        <td><%= deck.description %></td>
        <td><%= deck.category.name rescue "No category assigned"%></td>
        <td><%= deck.creation_date %></td>
        <td><%= deck.last_modified %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <ul class="card_details">
    <li><%= link_to 'New Deck', new_deck_path(@deck) %></li>
  </ul>
