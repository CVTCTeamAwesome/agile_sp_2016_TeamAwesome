<p id="notice"><%= notice %></p>

<div class="deck_show">
  <p class="title">
    <strong>Title:</strong>
    <%= @deck.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @deck.description %>
  </p>

  <p>
    <strong>Creation date:</strong>
    <%= @deck.creation_date %>
  </p>

  <p>
    <strong>Last modified:</strong>
    <%= @deck.last_modified %>
  </p>
  
  <ul class="div_nav left">
    <li><%= link_to 'Edit', edit_deck_path(@deck) %></li>
    <li><%= link_to 'Back', decks_path %></li>
    <li><%= link_to 'New Card', new_deck_card_path(@deck) %></li>
    <li><%= link_to "Manage Cards", deck_cards_path(@deck, @cards) %></li>
  </ul>

</div>