<p id="notice"><%= notice %></p>

<div class="deck_show">
  <p class="title">
    <strong>Title:</strong>
    <%= @deck.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @deck.description %>
  </p>

  <p>
    <strong>Category:</strong>
    <% if @deck.category.present? %>
      <%= @deck.category.name %>
    <% else %>
      No Category assigned
    <% end %>
  </p>
  
  <p>
    <strong>Number of Cards:</strong>
    <%= @deck.cards.size %>
  </p>
  
  <p>
    <strong>Creation date:</strong>
    <%="#{Date.current.to_formatted_s(:long_ordinal)}"%>
  </p>
  

  <p>
    <strong>Last modified:</strong>
    <%= "#{Date.current.to_formatted_s(:long_ordinal)} "%>
  </p>
  
  
  
  <ul class="div_nav left">
    <li><%= link_to 'Edit Deck', edit_deck_path(@deck) %></li>
    <li><%= link_to 'New Card', new_deck_card_path(@deck) %></li>
    <li><%= link_to "Manage Cards", deck_cards_path(@deck, @cards) %></li>
    <li><%= link_to 'Back to Decks', decks_path %></li>
  </ul>

</div>