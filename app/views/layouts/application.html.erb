<!DOCTYPE html>
<html>
  <head>
    <title>Flashcard</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.0.8/font-awesome-animation.min.css">
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
  </head>

  <body>
    <div id="wrapper">
      
      <header id="main_title">
        <h1>Flash Cards</h1>
        <h2>by Team Awesome</h2>
      </header>
      
      <div id="main_nav_button">
        <p>&#9776;</p>
      </div>
      
      <nav id="main_nav">
        <ul>
          <li><%= link_to_unless_current 'Home', root_url %></li>
          
        <% if user_signed_in? %>
          <li><%= link_to_unless_current 'Display', display_url %></li>
          <li><%= link_to_unless_current 'Decks', decks_url %></li>
          <li><%= link_to_unless_current 'Categories', categories_url %></li>
        <% end %>
          
        </ul>
      </nav>
      
      <main>

        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% elsif alert %>
          <p class="alert"><%= alert %></p>
        <% end %>

        <%= yield %>
      </main>
    </div>

  </body>
</html>
