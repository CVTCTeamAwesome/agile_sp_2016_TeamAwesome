<!DOCTYPE html>
<html>
  <head>
    <title>Flashcard</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <nav>
        <ul>
          <li><%=link_to_unless_current 'Home', root_url %></li>
          <li><%=link_to_unless_current 'Display', display_url %></li>
          <li><%=link_to_unless_current 'Decks', decks_url %></li>
          <li><%= link_to_unless_current 'Categories', categories_url %></li>
        </ul>
      </nav>
      <%= yield %>
    </div>

  </body>
</html>
