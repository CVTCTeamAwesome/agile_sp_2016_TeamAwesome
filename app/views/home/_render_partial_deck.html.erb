<% cardsArray = Array.new %>

<div id="jumpToCard">
  <% @selectedDeck.cards.each do |card| %>
  <% if card.visible == true %>
    <% cardsArray.push(card) %>
    <a href="#" class="<%= cardsArray.last.name %><%= cardsArray.last.id %>"><%= cardsArray.last.name %></a>
  <% end %>
<% end %>
</div>  

<% if cardsArray.size > 0 %> 

<div class="current_deck">
    <h3><%= @selectedDeck.title %> - Current Card:</h3>
    <div class="buttons">
      <p id="showAnswerText">Question</p>
    </div>
  </div>

  <div class="cardContainer">
    <% cardsArray.each_with_index do |card, index| %>
      <div class="cardDiv card_display <%= card.name %><%= card.id %>" style="display:none;">
        <div style="<%= displayPicture_styles card %>" class="cardSide card_front questionTextDiv">
          <i class="fa fa-chevron-left fa-5x faa-pulse animated-hover"></i>
          <p class="card_text front" style="<%= displayQuestionsText card %>"><%= card.question_text %></p>
          <i class="fa fa-chevron-right fa-5x faa-pulse animated-hover"></i>
        </div>
        <div style="color:<%= card.foreground_color %>; display:none;
               background-color:<%= card.background_color %>;" class="cardSide card_back answerTextDiv">
          <i class="fa fa-chevron-left fa-5x faa-pulse animated-hover"></i>
          <p class="card_text" style="font-family:<%= card.font_style %>;
               font-size:<%= card.font_size %>;"><%= card.answer_text %></p>
          <i class="fa fa-chevron-right fa-5x faa-pulse animated-hover"></i>
        </div>
      </div>
    <% end %>
  </div>

<% else %>
  <h3><%= @selectedDeck.title %> has no cards yet.</h3>
<% end %>