<%= form_for [@deck, @card]  do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% @card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card_editor">

    <div class="field">
      <%= f.label :visible %><br>
      <%= f.check_box :visible %>
    </div>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :question_text %><br>
      <%= f.text_area :question_text %>
    </div>

    <div class="field">
      <%= f.label :answer_text %><br>
      <%= f.text_area :answer_text %>
    </div>

    <div class="field">
      <%= f.label :background_color %><br>
      <%= f.color_field :background_color %>
    </div>

    <div class="field">
      <%= f.label :foreground_color %><br>
      <%= f.color_field :foreground_color %>
    </div>

    <div class="field">
      <%= f.label :font_style %>
      <%= f.select :font_style, [ 'Arial', 'Comic Sans MS', 'Courier New', 'Georgia', 'Lucida Sans Typewriter', 'Palatino', 'Papyrus', 'Times New Roman', 'Trebushet MS', 'Verdana' ], :prompt => 'Select One' %>
    </div>

    <div class="field">
      <%= f.label :font_size %><br>
      <%= f.select :font_style, [ '10pt', '12pt', '14pt', '16pt', '18pt', '20pt', '22pt', '24pt', '26pt', '28pt', '30pt' ], :prompt => 'Select One' %>
    </div>
    
    <div class="field">
      <%= f.label :picture %><br>
      <%= f.file_field :picture %>
    </div>

    <% if @card.persisted? %>
      <% if @card.picture? %>
        <div class="field">
          <%= link_to 'Remove card picture', remove_card_picture_path, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
    <% end %>
    
    <div class="actions">
      <%= f.submit %>
    </div>

  </div>
  
  <div class="card_display">
    
    <%= render 'card_display' %>
    
  </div>
<% end %>
